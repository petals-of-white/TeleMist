<ResourceDictionary
    x:Class="TeleMist.Resources.Styles.Buttons"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="AbstractRoundedButton" TargetType="Button">
        <Setter Property="Height" Value="{DynamicResource ButtonHeight}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderThickness="1"
                        CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Width" Value="{DynamicResource ButtonWidth}" />

        <Style.Triggers>

            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderThickness="3"
                                CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                <!--  Content="{TemplateBinding Content}"  -->
                            </Border>

                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <!--<Setter Property="Height" Value=""/>-->
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="CancelButton" TargetType="Button">
        <EventSetter Event="Click" Handler="CancelAppointmentButton_Click" />

        <Setter Property="Background">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="{TemplateBinding Background}"
                                BorderThickness="1" BorderBrush="#ba263a">
                       

                        <ContentPresenter    HorizontalAlignment="Center"
                                             VerticalAlignment="Center"    
                                             />
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#ba263a" />
        <Setter Property="Content">
            <Setter.Value>
                <TextBlock FontSize="14" LineHeight="15"  LineStackingStrategy="BlockLineHeight" Text="Скасувати запис"/>
            </Setter.Value>

        </Setter>

        <Setter Property="Foreground" Value="#ba263a"/>

        <Setter Property="Background">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="#ba263a"
                        BorderThickness="1"
                        CornerRadius="5">


                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Visibility" Value="Visible" />
        <Setter Property="Width" Value="90" />
        <Setter Property="Width" Value="80" />


        <Style.Triggers>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="5"
                                    Width="{TemplateBinding Width, Converter={StaticResource MathConverter}, ConverterParameter=@VALUE-2}"
                                    Height="{TemplateBinding Height, Converter={StaticResource MathConverter}, ConverterParameter=@VALUE-2}"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="1" BorderBrush="#ba263a">
                                <ContentPresenter 
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                             />
                                <!-- Content="{TemplateBinding Content}"-->
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <!--<Setter Property="Height" Value=""/>-->
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style
        x:Key="PurpleButton"
        BasedOn="{StaticResource AbstractRoundedButton}"
        TargetType="Button">
        <Setter Property="Background" Value="#6C55E4" />
        <Setter Property="Foreground" Value="#f5f5f5" />
    </Style>

    <Style
        x:Key="YellowButton"
        BasedOn="{StaticResource AbstractRoundedButton}"
        TargetType="Button">
        <Setter Property="Background" Value="#feb83f" />
        <Setter Property="Foreground" Value="#373737" />
    </Style>

    <Style
        x:Key="AppointmentMadeButton"
